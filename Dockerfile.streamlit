FROM python:3.11-slim

# Install system dependencies for Docling, OCR, and Granite-Docling-258M
RUN apt-get update && apt-get install -y \
    build-essential \
    poppler-utils \
    tesseract-ocr \
    libmagic1 \
    libgomp1 \
    wget \
    git \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Copy requirements and install Python packages
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Test core components
RUN python -c "import fitz; print('PyMuPDF ready')"
RUN python -c "import docling; print('Docling ready')"
RUN python -c "import pdf2image; print('pdf2image ready')"

# Copy application code
COPY app/ ./app/
COPY data/ ./data/

# Create necessary directories
RUN mkdir -p /app/images /app/data/documents

# Expose Streamlit port
EXPOSE 8501

# Set Python path to include the app directory
ENV PYTHONPATH="/app:$PYTHONPATH"

CMD ["streamlit", "run", "app/main.py", "--server.address=0.0.0.0", "--server.port=8501"]